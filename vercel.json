{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/scheduled-transactions/process",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/summary/today",
      "schedule": "0 21 * * *"
    },
    {
      "path": "/api/backup/transactions",
      "schedule": "0 12 * * 0"
    }
  ]
}
